{
  "name": "chillist-fe",
  "private": true,
  "version": "1.5.0",
  "type": "module",
  "scripts": {
    "predev": "npm run api:fetch",
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run && playwright test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "mock:server": "tsx watch api/server.ts",
    "mock:server:ci": "tsx api/server.ts",
    "routes": "npx @tanstack/router-cli@latest generate",
    "api:fetch": "curl -s -o src/core/openapi.json https://raw.githubusercontent.com/Alexgub84/chillist-be/main/docs/openapi.json",
    "api:types": "openapi-typescript src/core/openapi.json -o src/core/api.generated.ts && prettier --write src/core/api.generated.ts",
    "api:sync": "npm run api:fetch && npm run api:types",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "screenshots": "tsx scripts/take-screenshots.ts"
  },
  "dependencies": {
    "@headlessui/react": "2.2.9",
    "@hookform/resolvers": "^5.2.2",
    "@supabase/supabase-js": "2.95.3",
    "@tanstack/react-query": "^5.90.7",
    "@tanstack/react-router": "^1.134.15",
    "clsx": "2.1.1",
    "i18next": "23.16.8",
    "openapi-fetch": "^0.15.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.68.0",
    "react-hot-toast": "2.6.0",
    "react-i18next": "15.4.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@fastify/cors": "^11.0.1",
    "@playwright/test": "^1.58.1",
    "@tailwindcss/vite": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "fastify": "^5.1.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^4.0.8",
    "zod": "^3.25.76"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json}": [
      "prettier --write"
    ]
  }
}
